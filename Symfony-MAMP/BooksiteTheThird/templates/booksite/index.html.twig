{% extends 'base.html.twig' %}

{% block title %}Booksite
{% endblock %}

{% block body %}
	<h1>Booksite</h1>
	<style>{{source('style.css')}}</style>
	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Author</th>
				<th>Year</th>
				<th>Genre</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td>{{ book.title }}</td>
					<td>{{ book.author }}</td>
					<td>{{ book.publishingYear }}</td>
					<td>{{ book.genre }}</td>
					<td>{{ book.description }}</td>
					<td>

						<button>
							<a href="{{ path('book_edit', {'id': book.id})}}">Edit</a>
						</button>

						<!-- Start of the form for delete button -->
						<form action="{{ path('book_delete', {'id': book.id}) }}" method="post" onsubmit="return confirm('Are you sure?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
							<input type="hidden" name="_method" value="DELETE">
							<button type="submit">Delete</button>
						</form>
						<!-- End of the form for delete button -->
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</tr>
</tbody></tbody></table><button><a href="{{ path('book_new') }}">Add new Book</a></button>{% endblock %}
